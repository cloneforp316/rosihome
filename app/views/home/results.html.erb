<head>
  <style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
  </style>
</head>
<body>
  <h3>
    Count: <%= @posts.count %>
  </h3>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Message</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= post.name %> </td>
          <td> <%= post.phone %> </td>
          <td> <%= post.message %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</body>
